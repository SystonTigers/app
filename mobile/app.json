{
  "expo": {
    "name": "Field Drop",
    "slug": "field-drop",
    "scheme": "fielddrop",
    "version": "1.0.0",
    "orientation": "portrait",
    "jsEngine": "hermes",
    "newArchEnabled": false,

    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#0B1220"
    },

    "android": {
      "package": "com.yourorg.fielddrop",
      "versionCode": 1,
      "adaptiveIcon": {
        "backgroundColor": "#0B1220"
      }
    },
    "ios": {
      "bundleIdentifier": "com.yourorg.fielddrop",
      "buildNumber": "1.0.0",
      "supportsTablet": false
    },
    "web": {
      "bundler": "metro",
      "output": "single"
    },
    "plugins": [
      "expo-localization",
      "expo-secure-store",
      "expo-notifications",
      "expo-av",
      "expo-image-picker"
    ],
    "updates": {
      "enabled": false,
      "fallbackToCacheTimeout": 0
    },
    "extra": {
      "eas": { "projectId": "dev-placeholder" }
    }
  }
}
